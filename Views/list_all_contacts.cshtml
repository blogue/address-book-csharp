<h1>Contacts</h1>

@if(@Model.Count == 0)
{
    <h1>No Contacts in Book!</h1>
}

<ul>
@foreach (var contact in Model)
{
  <li>
  <h3><a href="/contacts/details/@contact.GetId()">@contact.GetName()</a></h3>
  </li>
}
</ul>


<a href="/">Home</a>
<a href="/add_contact">Add Contact</a>
<form action="/contacts/delete_all" method="post">
  <button type="submit" name="button">Delete All Contacts</button>
</form>

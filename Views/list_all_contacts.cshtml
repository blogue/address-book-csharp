<h1>Contacts</h1>

@if(@Model.Count == 0)
{
    <h1>No Contacts in Book!</h1>
}

<ul>
@foreach (var contact in Model)
{
  <li>
  <p>Name: @contact.GetName()</p>
  <p>Address: @contact.GetAddress()</p>
  <p>Phone: @contact.GetPhone()</p>
  </li>
}
</ul>


<a href="/">Home</a>
<a href="/add_contact">Add Contact</a>
<form action="/contacts/delete_all" method="post">
  <button type="submit" name="button">Delete All Contacts</button>
</form>
